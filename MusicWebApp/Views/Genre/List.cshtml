<h1>Select a genre to listen</h1>
@foreach (var genre in Model.Genres)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@genre.ImageLocation" width="250" alt=""/>
            <div class="caption">
                <h3>
                    <a>@genre.Name</a>
                </h3>
            </div>
        </div>

    </div>
}